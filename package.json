{
  "name": "duotone-syntax",
  "theme": "syntax",
  "version": "1.0.0",
  "description": "Master template for DuoTone syntax themes",
  "keywords": [
    "duotone",
    "syntax"
  ],
  "repository": "https://github.com/simurai/duotone-syntax",
  "license": "MIT",
  "main": "lib/duotone",
  "engines": {
    "atom": ">1.9.0"
  },
  "dependencies": {
    "chroma-js": "1.1.1"
  },
  "configSchema": {
    "preset": {
      "title": "Color presets",
      "description": "Choose one of the presets.",
      "order": 1,
      "type": [
        "string"
      ],
      "enum": ["Default", "Dark Sea", "Dark Space", "Dark Forest", "Dark Earth"],
      "default": "Default"
    },
    "unoColor": {
      "title": "Uno",
      "description": "Or customize the main hue..",
      "order": 2,
      "type": "color",
      "default": "#7486FD"
    },
    "duoColor": {
      "title": "Duo",
      "description": "and the accent color.",
      "order": 3,
      "type": "color",
      "default": "#FF3963"
    },
    "bgColor": {
      "title": "Background color",
      "description": "Also color the background. Note: This might break the unified look of your UI theme.",
      "order": 4,
      "type": "boolean",
      "default": false
    }
  }
}
